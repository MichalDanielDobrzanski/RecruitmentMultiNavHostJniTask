<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/main_item_margin"
    app:strokeColor="@color/card_view_stroke_color"
    app:strokeWidth="@dimen/card_view_stroke_width">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_item_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/actorNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/movie_item_text_size"
            android:textStyle="bold"
            tools:text="@tools:sample/first_names" />

        <ImageView
            android:id="@+id/actorAvatarImageView"
            android:layout_width="@dimen/detail_movie_actor_image_size"
            android:layout_height="@dimen/detail_movie_actor_image_size"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age_text" />

            <TextView
                android:id="@+id/actorAgeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:textStyle="bold"
                tools:text="@tools:sample/date/hhmm" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>